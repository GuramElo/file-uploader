# Environment
NODE_ENV=production

# Server Configuration
HOST=0.0.0.0
PORT=3000

# Upload Configuration
UPLOAD_DIR=./uploads
MAX_FILE_SIZE=10737418240
MIN_FREE_SPACE=5368709120
CHUNK_SIZE=5242880

# Allowed file extensions (comma-separated, leave empty to allow all)
# Example: ALLOWED_EXTENSIONS=jpg,jpeg,png,gif,pdf,doc,docx,zip,mp4,mov
ALLOWED_EXTENSIONS=

# CORS Configuration (use specific domain in production)
CORS_ORIGIN=*

# Logging
LOG_LEVEL=info

# Timeouts (in milliseconds)
UPLOAD_TIMEOUT=3600000

# Docker
COMPOSE_PROJECT_NAME=file-uploader
